{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "@assets": ["assets/index.ts"],
      "@components": ["components/index.ts"],
      "@components/types": ["components/types/index.ts"],
      "@navigators": ["navigators/index.ts"],
      "@navigators/types": ["navigators/types/index.ts"],
      "@screens": ["screens/index.ts"],
      "@utils": ["utils/index.ts"],
      "@languages": ["i18n/index.ts"],
      "@services": ["api/index.ts"],
      "@services/types": ["api/types/index.ts"],
      "@hooks": ["hooks/index.ts"],
      "@slices/*": ["/redux/slices/*"]
    }
  }
}
